                    "description": "query term",
                    "indexable": true,
                    "order": 0
                },
                "type": {
                    "type": "string",
                    "path": "result_type",
                    "description": "Example Values: mixed, recent, popular",
                    "indexable": true,
                    "order": 1
                },
                "count": {
